{
  "name": "scholartrack",
  "version": "1.0.0",
  "description": "Local-first student tracking application with sync capabilities",
  "main": "dist/server/index.js",
  "scripts": {
    "cleanup": "pkill -f 'vite\\|node.*server\\|tsx' || true",
    "dev": "npm run cleanup && concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node dist/server/index.js",
    "type-check": "tsc --noEmit -p server/tsconfig.json && tsc --noEmit -p client/tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx,.vue --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.vue",
    "test:local": "npm run cleanup && concurrently \"npm run server:local\" \"npm run client:local\"",
    "server:local": "tsx server/index.ts",
    "client:local": "cd client && npm run dev"
  },
  "keywords": ["student", "tracking", "education", "vuetify", "sqlite"],
  "author": "ScholarTrack Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "pdfkit": "^0.14.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/pdfkit": "^0.13.4",
    "@types/node": "^20.9.0",
    "typescript": "^5.2.2",
    "tsx": "^4.6.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "@vue/eslint-config-typescript": "^12.0.0"
  }
}
